generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  PUBLISHER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  passwordHash String? // <-- THIS MUST EXIST

  role Role @default(USER)

  accounts Account[]
  sessions Session[]

  posts Post[] @relation("PublisherPosts")
  likes Like[]

  createdAt DateTime @default(now())
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String

  publisherId String
  publisher   User     @relation("PublisherPosts", fields: [publisherId], references: [id])

  likes       Like[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
}

model Like {
  id        String @id @default(cuid())

  userId    String
  user      User   @relation(fields: [userId], references: [id])

  postId    String
  post      Post   @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, postId])
}


model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
